│   └── product_controller_test.go
├── services/
│   ├── product_service.go     // package productservice
│   └── product_service_test.go
├── models/
│   ├── product.go             // package productmodel
│   └── product_test.go
├── repositories/
│   ├── product_repository.go  // package productrepository
│   └── product_repository_test.go
├── utils/
│   ├── utils.go               // package productutils
│   └── utils_test.go
├── product.go                 // package product
└── product_test.go

